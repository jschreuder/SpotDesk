{
    "name": "jschreuder/spot-desk",
    "description": "Email based helpdesk ticket software",
    "type": "application",
    "license": "MIT",
    "authors": [
        {
            "name": "Jelmer Schreuder",
            "email": "j.schreuder@mijnpraktijk.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "ext-mbstring": "*",
        "ext-PDO": "*",
        "ext-json": "*",
        "jschreuder/middle": "2.0-RC3",
        "laminas/laminas-diactoros": "^2.9",
        "laminas/laminas-httphandlerrunner": "^2.1",
        "monolog/monolog": "^2.3",
        "robmorgan/phinx": "^0.12",
        "pimple/pimple": "^3.5",
        "symfony/routing": "^6.0",
        "symfony/console": "^6.0",
        "ramsey/uuid": "^4.3",
        "lcobucci/jwt": "^4.1",
        "symfony/mailer": "^6.0",
        "laminas/laminas-filter": "^2.14",
        "laminas/laminas-validator": "^2.17",
        "twig/twig": "^3.3",
        "laminas/laminas-permissions-rbac": "^3.2"
    },
    "require-dev": {
        "ext-imap": "*",
        "phpspec/phpspec": "^7.2",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "^2.12",
        "fakerphp/faker": "^1.19",
        "friends-of-phpspec/phpspec-code-coverage": "^6.1",
        "php-imap/php-imap": "^5.0"
    },
    "suggest": {
        "webklex/php-imap": "For reading e-mails into tickets"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "jschreuder\\SpotDesk\\": "src"
        }
    }
}
